{{#> layouts/main title="Pollr | Home" }}

    {{!-- Add in the meta, styles, and head scripts --}}
    {{#extend "meta-content"}}
        {{> includes/meta}}
    {{/extend}}
    
    {{#extend "head-styles"}}
        {{> includes/styles}}
        {{> style bundle="home" }}
    {{/extend}}
    
